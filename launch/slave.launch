<?xml version="2.0" ?>
<launch>

<arg name="robot_name"  default="robot"/>
<arg name="robot_x"     default="0.0" />
<arg name="robot_y"     default="0.0" />
<arg name="name_master" default="master"/>
 



<group ns="$(arg robot_name)" > 

    <include file="$(find multi_robot_system)/launch/mir_gazebo_common.launch">
        <arg name="robot_x"   value="$(arg robot_x)" />
        <arg name="robot_y"   value="$(arg robot_y)" />
        <arg name="controller_name" value="/$(arg robot_name)" />
    </include>  
  
    <node name="Slave_ctr" pkg="multi_robot_system" type="robot_slave.py" args="/$(arg name_master)/mobile_base_controller/cmd_vel mobile_base_controller/cmd_vel $(arg robot_x) $(arg robot_y)" ></node>
    
   
</group> 
</launch>


