<?xml version="1.0" ?>
<launch>
  <arg name="gui" default="true" />
  <arg name="world_name" default="worlds/empty.world"/> <!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable, but can also be an absolute path -->
  

  <!-- <remap from="robot1/joint_states"                   to="robot1/mir/joint_states" />
  <remap from="robot1/mobile_base_controller/odom"    to="robot1/odom_comb" />

   
  <remap from="robot2/joint_states"                   to="robot2/mir/joint_states" />
  <remap from="robot2/mobile_base_controller/odom"    to="robot2/odom_comb" />  -->

  
  <remap from="robot1/mobile_base_controller/cmd_vel" to="robot1/master_out" />
  <remap from="robot2/mobile_base_controller/cmd_vel" to="robot2/slave_out" />  
  <remap from="robot3/mobile_base_controller/cmd_vel" to="robot3/slave_out" />
  
  




  <group ns="robot1" >
    <param name="input_master" type="str" value="master_in"/>
    <param name="output_master" type="str" value="master_out"/>

    <include file="$(find multi_robot_system)/launch/mir_gazebo_common.launch">
    <arg name="robot_x"   value="0.0" />
    <arg name="robot_y"   value="0.0" />
    <arg name="controller_name" value="robot1" />    
  </include>  
  <node name="Master_ctr" pkg="multi_robot_system" type="robot_master.py"> </node>
</group>



 <group ns="robot2" >
    <param name="input_slave" type="str" value="/robot1/master_out"/>
    <param name="output_slave" type="str" value="slave_out"/>
    <param name="is_left" type="bool" value="true" />
    <param name="distance" type="double" value="1.5"/>

    <include file="$(find multi_robot_system)/launch/mir_gazebo_common.launch">
     <arg name="robot_x"   value="0.0" />
     <arg name="robot_y"   value="1.5" />
     <arg name="controller_name" value="robot2" />
    </include>  
  <node name="Slave_ctr" pkg="multi_robot_system" type="robot_slave.py"> </node>
</group> 


<group ns="robot3" >
    <param name="input_slave" type="str" value="/robot1/master_out"/>
    <param name="output_slave" type="str" value="slave_out"/>
    <param name="is_left" type="bool" value="false" />
    <param name="distance" type="double" value="1.5"/>

    <include file="$(find multi_robot_system)/launch/mir_gazebo_common.launch">
     <arg name="robot_x"   value="0.0" />
     <arg name="robot_y"   value="-1.5" />
     <arg name="controller_name" value="robot3" />
    </include>  
  <node name="Slave_ctr" pkg="multi_robot_system" type="robot_slave.py"> </node>
</group> 


 




 <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="world_name" value="$(arg world_name)"/>
      <arg name="paused" value="false" />
      <arg name="gui" value="$(arg gui)" />
    </include>


   



  <!-- spawn robot and bring up controllers etc. -->  
  
</launch>
