<?xml version="1.0" ?>
<!-- This file launches a system with below defined masters and slaves.-->
<launch>

<!-- Load the formation parameter file-->
<rosparam file="$(find multi_robot_launcher)/config/formation.yaml" command="load"></rosparam>

<!-- Setup a slave mobile robot-->
<include file="$(find controller)/launch/slave.launch">
  <arg name="robot_name" value="robot1"/>
  <arg name="robot_x"   value="-1.25" />
  <arg name="robot_y"   value="1.25" />
  <arg name="robot_yaw" value="0" />
  <arg name="displ" value="screen"/>
</include>



<!-- Setup a slave mobile robot-->
<include file="$(find controller)/launch/slave.launch">
  <arg name="robot_name" value="robot2"/>
  <arg name="robot_x"   value="-1.25" />
  <arg name="robot_y"   value="-1.25" />
  <arg name="robot_yaw" value="0" />
  <arg name="displ" value="screen"/>
</include>


<!-- Setup a master mobile robot-->
<include file="$(find controller)/launch/master.launch">
  <arg name="robot_name" value="robot_master"/>
  <arg name="robot_x"   value="0.0" />  
  <arg name="robot_y"   value="0.0" />
  <arg name="robot_yaw" value="0" />
  <arg name="displ" value="screen"/>
</include>

</launch>
